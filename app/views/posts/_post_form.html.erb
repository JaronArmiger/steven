<%= form_with(model: @post, local: true) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
	  <%= f.text_area :content, placeholder: "How you feelin?" %>
	</div>
	<span class="image">
		<%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>
	</span>
<% end %>